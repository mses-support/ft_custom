
<odoo>
    <record id="view_move_form_inherit_zatca_btn" model="ir.ui.view">
        <field name="name">account.move.form.zatca.btn</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_zatca_xml"
                        type="object"
                        string="Generate ZATCA XML"
                        class="btn-primary"
                        groups="account.group_account_invoice"
                        invisible="state != 'posted' or move_type not in ('out_invoice','out_refund')"/>
            </xpath>
        </field>
    </record>
</odoo>
