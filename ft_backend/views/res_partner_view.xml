<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_partner_form_vat_arabic" model="ir.ui.view">
        <field name="name">res.partner.form.vat.arabic</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Arabic Details">
                    <group>
                        <group>
                            <field name="name_arabic" placeholder="اسم الشركة بالعربية"/>
                            <field name="company_registry_arabic" placeholder="رقم السجل التجاري بالعربية"/>
                            <field name="vat_arabic" placeholder="رقم ضريبة القيمة المضافة بالعربية"/>
                        </group>
                        <group>
                            <field name="street_arabic" placeholder="الشارع بالعربية"/>
                            <field name="street2_arabic" placeholder="الشارع 2 بالعربية"/>
                            <field name="city_arabic" placeholder="المدينة بالعربية"/>
                            <field name="zip_arabic" placeholder="الرمز البريدي بالعربية"/>
                            <field name="country_arabic" placeholder="الدولة بالعربية"/>
                        </group>
                    </group>
                    <group>
                        <field name="address_arabic" placeholder="العنوان الكامل بالعربية"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
