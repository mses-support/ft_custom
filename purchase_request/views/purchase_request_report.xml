<odoo>
    <record id="action_report_purchase_requests" model="ir.actions.report">
        <field name="name">Purchase Request</field>
        <field name="binding_model_id" ref="model_purchase_request" />
        <field name="model">purchase.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_request.report_purchase_request</field>
        <field name="report_file">purchase_request.report_purchase_request</field>
    </record>

    <record id="action_report_material_requisition" model="ir.actions.report">
        <field name="name">Material Requisition</field>
        <field name="binding_model_id" ref="model_purchase_request" />
        <field name="model">purchase.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_request.report_material_requisition</field>
        <field name="report_file">purchase_request.report_material_requisition</field>
        <field name="print_report_name">'Material Requisition - %s' % (object.name)</field>
    </record>
</odoo>
